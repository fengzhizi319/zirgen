// RUN: zirgen -I %S/../src --test %s

import bits;

// Check that valid bits are valid
test BitInRange {
  AssertBit(0);
  AssertBit(1);
}

// Check that 2 is not a bit
test_fails BitOutOfRange {
  AssertBit(2);
}

// Check that all valid twit values are OK
test TwitInRange{
  AssertTwit(0);
  AssertTwit(1);
  AssertTwit(2);
  AssertTwit(3);
}

// Check that 4 is not a twit
test_fails TwitOutOfRange {
  AssertTwit(4);
}
